{% extends "base.twig" %}

{% block title %}Welcome to Ticketa{% endblock %}

{% block stylesheets %}
<link href="/css/landing.css" rel="stylesheet">
{% endblock %}

{% block content %}
<div class="landing-container">
    <!-- Header -->
    <header class="header">
        <h1 class="logo">Ticketa</h1>
        <nav class="nav">
            <a href="/login" class="btn login">Login</a>
            <a href="/register" class="btn get-started">Get Started</a>
        </nav>
    </header>

    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-content">
            <h2>Manage Tickets. Simplify Support.</h2>
            <p>
                Ticketa helps teams resolve issues faster — from customer requests to
                internal operations. One dashboard. Endless clarity.
            </p>
            <div class="cta-buttons">
                <a href="/register" class="btn primary">Get Started</a>
                <a href="/login" class="btn secondary">Login</a>
            </div>
        </div>
        <div class="decor-circle"></div>
        <svg class="wave" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none">
            <path d="M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V0H0V27.35A600.21,600.21,0,0,0,321.39,56.44Z"></path>
        </svg>
    </section>

    <!-- Features Section -->
    <section class="features">
        <div class="feature-box">
            <h3>Create & Track Tickets</h3>
            <p>Easily create, assign, and monitor tickets in one clean dashboard.</p>
        </div>
        <div class="feature-box">
            <h3>Collaborate Efficiently</h3>
            <p>Keep your team synced with real-time updates and smart filters.</p>
        </div>
        <div class="feature-box">
            <h3>Analytics that Matter</h3>
            <p>Gain insights into ticket trends and performance at a glance.</p>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <p>© 2024 Ticketa — Built with ❤️ for HNG Internship</p>
    </footer>
</div>
{% endblock %}
