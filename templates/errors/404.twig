{% extends "base.twig" %}

{% block title %}Page Not Found - {{ app_name }}{% endblock %}

{% block content %}
<div class="row justify-content-center">
    <div class="col-lg-6 text-center">
        <div class="error-page">
            <div class="error-code">
                <h1 class="display-1 fw-bold text-primary">404</h1>
            </div>
            
            <div class="error-message">
                <h2 class="h3 mb-3">Oops! Page Not Found</h2>
                <p class="text-muted mb-4">
                    The page you're looking for doesn't exist or has been moved. 
                    Don't worry, it happens to the best of us!
                </p>
            </div>
            
            <div class="error-actions">
                <a href="/" class="btn btn-primary me-3">
                    <i class="bi bi-house me-2"></i>Go Home
                </a>
                <a href="/tickets" class="btn btn-outline-primary">
                    <i class="bi bi-ticket-perforated me-2"></i>View Tickets
                </a>
            </div>
            
            <div class="error-help mt-5">
                <h5>Need Help?</h5>
                <p class="text-muted">
                    If you think this is an error, please contact support or 
                    <a href="/tickets/create" class="text-decoration-none">create a ticket</a>.
                </p>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
<style>
.error-page {
    padding: 3rem 0;
}

.error-code h1 {
    font-size: 8rem;
    line-height: 1;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.error-message h2 {
    color: #333;
}

.error-actions .btn {
    min-width: 150px;
}

@media (max-width: 768px) {
    .error-code h1 {
        font-size: 6rem;
    }
    
    .error-actions .btn {
        display: block;
        width: 100%;
        margin-bottom: 1rem;
    }
    
    .error-actions .btn:last-child {
        margin-bottom: 0;
    }
}
</style>
{% endblock %}
