{% extends "base.twig" %}

{% block title %}Dashboard - Ticketa{% endblock %}

{% block stylesheets %}
<link href="/css/dashboard.css" rel="stylesheet">
{% endblock %}

{% block content %}
<div class="dashboard-layout">
    <!-- Sidebar -->
    <aside class="sidebar">
        <div class="sidebar-header">
            <h2>Ticketa</h2>
        </div>

        <nav class="nav-links">
            <a href="/dashboard" class="nav-link active">
                🏠 Dashboard
            </a>
            <a href="/tickets" class="nav-link">
                🎟️ Tickets
            </a>
            <a href="/profile" class="nav-link">
                ⚙️ Settings
            </a>
        </nav>

        <div class="sidebar-footer">
            <p>{{ user.email }}</p>
            <a href="/logout" class="logout-btn">Logout</a>
        </div>
    </aside>

    <!-- Main Dashboard Content -->
    <main class="dashboard-content">
        <header class="dashboard-top">
            <h1>Dashboard Overview</h1>
            <p>Track your ticket statistics in real-time.</p>
        </header>

        <section class="stats-grid">
            <div class="stat-card total">
                <h3>Total Tickets</h3>
                <p>{{ stats.total_tickets }}</p>
            </div>
            <div class="stat-card open">
                <h3>Open Tickets</h3>
                <p>{{ stats.open_tickets }}</p>
            </div>
            <div class="stat-card closed">
                <h3>Closed Tickets</h3>
                <p>{{ stats.closed_tickets }}</p>
            </div>
        </section>

        <section class="manage-section">
            <a href="/tickets" class="manage-btn">Go to Ticket Management</a>
        </section>
    </main>
</div>
{% endblock %}
