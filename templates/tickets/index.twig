{% extends "base.twig" %}

{% block title %}Tickets - {{ app_name }}{% endblock %}

{% block content %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">
        <i class="bi bi-ticket-perforated me-2"></i>Tickets
    </h1>
    <div>
        <a href="/tickets/create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>New Ticket
        </a>
    </div>
</div>

<!-- Filters -->
<div class="card shadow mb-4">
    <div class="card-header">
        <h5 class="mb-0">
            <i class="bi bi-funnel me-2"></i>Filters
        </h5>
    </div>
    <div class="card-body">
        <form method="GET" action="/tickets" id="filterForm">
            <div class="row g-3">
                <div class="col-md-3">
                    <label for="status" class="form-label">Status</label>
                    <select class="form-select" id="status" name="status">
                        <option value="">All Statuses</option>
                        {% for status in statuses %}
                            <option value="{{ status }}" {{ filters.status == status ? 'selected' : '' }}>
                                {{ status|title }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
                
                <div class="col-md-3">
                    <label for="priority" class="form-label">Priority</label>
                    <select class="form-select" id="priority" name="priority">
                        <option value="">All Priorities</option>
                        {% for priority in priorities %}
                            <option value="{{ priority }}" {{ filters.priority == priority ? 'selected' : '' }}>
                                {{ priority|title }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
                
                <div class="col-md-3">
                    <label for="category" class="form-label">Category</label>
                    <select class="form-select" id="category" name="category">
                        <option value="">All Categories</option>
                        {% for category in categories %}
                            <option value="{{ category }}" {{ filters.category == category ? 'selected' : '' }}>
                                {{ category|title }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
                
                {% if user.role == 'admin' %}
                <div class="col-md-3">
                    <label for="assigned_to" class="form-label">Assigned To</label>
                    <select class="form-select" id="assigned_to" name="assigned_to">
                        <option value="">All Users</option>
                        {% for userOption in users %}
                            <option value="{{ userOption.id }}" {{ filters.assigned_to == userOption.id ? 'selected' : '' }}>
                                {{ userOption.first_name }} {{ userOption.last_name }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
                {% endif %}
            </div>
            
            <div class="row g-3 mt-2">
                <div class="col-md-6">
                    <label for="search" class="form-label">Search</label>
                    <input type="text" class="form-control" id="search" name="search" 
                           placeholder="Search tickets..." value="{{ filters.search|default('') }}">
                </div>
                
                <div class="col-md-3">
                    <label for="limit" class="form-label">Per Page</label>
                    <select class="form-select" id="limit" name="limit">
                        <option value="10" {{ pagination.items_per_page == 10 ? 'selected' : '' }}>10</option>
                        <option value="25" {{ pagination.items_per_page == 25 ? 'selected' : '' }}>25</option>
                        <option value="50" {{ pagination.items_per_page == 50 ? 'selected' : '' }}>50</option>
                    </select>
                </div>
                
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-search me-1"></i>Filter
                    </button>
                    <a href="/tickets" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle me-1"></i>Clear
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Tickets Table -->
<div class="card shadow">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
            <i class="bi bi-list-ul me-2"></i>Tickets List
            <span class="badge bg-secondary ms-2">{{ pagination.total_items }}</span>
        </h5>
    </div>
    <div class="card-body p-0">
        {% if tickets %}
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Status</th>
                            <th>Priority</th>
                            <th>Category</th>
                            <th>Created By</th>
                            <th>Assigned To</th>
                            <th>Created</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for ticket in tickets %}
                        <tr>
                            <td>
                                <span class="badge bg-secondary">#{{ ticket.id }}</span>
                            </td>
                            <td>
                                <a href="/tickets/{{ ticket.id }}" class="text-decoration-none fw-medium">
                                    {{ ticket.title|length > 60 ? ticket.title|slice(0, 60) ~ '...' : ticket.title }}
                                </a>
                                {% if ticket.description|length > 0 %}
                                    <br>
                                    <small class="text-muted">
                                        {{ ticket.description|length > 100 ? ticket.description|slice(0, 100) ~ '...' : ticket.description }}
                                    </small>
                                {% endif %}
                            </td>
                            <td>
                                <span class="badge bg-{{ ticket.status == 'open' ? 'warning' : (ticket.status == 'in_progress' ? 'info' : (ticket.status == 'resolved' ? 'success' : 'secondary')) }}">
                                    {{ ticket.status|title }}
                                </span>
                            </td>
                            <td>
                                <span class="badge bg-{{ ticket.priority == 'urgent' ? 'danger' : (ticket.priority == 'high' ? 'warning' : (ticket.priority == 'medium' ? 'info' : 'secondary')) }}">
                                    {{ ticket.priority|title }}
                                </span>
                            </td>
                            <td>
                                <span class="badge bg-light text-dark">{{ ticket.category|title }}</span>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-person-circle me-2"></i>
                                    <div>
                                        <div class="fw-medium">{{ ticket.creator_first_name }} {{ ticket.creator_last_name }}</div>
                                        <small class="text-muted">@{{ ticket.creator_username }}</small>
                                    </div>
                                </div>
                            </td>
                            <td>
                                {% if ticket.assignee_first_name %}
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-person-check me-2"></i>
                                        <div>
                                            <div class="fw-medium">{{ ticket.assignee_first_name }} {{ ticket.assignee_last_name }}</div>
                                            <small class="text-muted">@{{ ticket.assignee_username }}</small>
                                        </div>
                                    </div>
                                {% else %}
                                    <span class="text-muted">
                                        <i class="bi bi-person-x me-1"></i>Unassigned
                                    </span>
                                {% endif %}
                            </td>
                            <td>
                                <div>
                                    <div>{{ ticket.created_at|date('M j, Y') }}</div>
                                    <small class="text-muted">{{ ticket.created_at|date('g:i A') }}</small>
                                </div>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="/tickets/{{ ticket.id }}" class="btn btn-sm btn-outline-primary" title="View">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    {% if user.role == 'admin' or ticket.created_by == user.id %}
                                        <a href="/tickets/{{ ticket.id }}/edit" class="btn btn-sm btn-outline-secondary" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                    {% endif %}
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            
            <!-- Pagination -->
            {% if pagination.total_pages > 1 %}
            <div class="card-footer">
                <nav aria-label="Tickets pagination">
                    <ul class="pagination justify-content-center mb-0">
                        {% if pagination.has_previous %}
                            <li class="page-item">
                                <a class="page-link" href="?page={{ pagination.previous_page }}{% for key, value in filters %}{% if value %}&{{ key }}={{ value }}{% endif %}{% endfor %}">
                                    <i class="bi bi-chevron-left"></i>
                                </a>
                            </li>
                        {% endif %}
                        
                        {% for page in 1..pagination.total_pages %}
                            {% if page == pagination.current_page %}
                                <li class="page-item active">
                                    <span class="page-link">{{ page }}</span>
                                </li>
                            {% elseif page == 1 or page == pagination.total_pages or (page >= pagination.current_page - 2 and page <= pagination.current_page + 2) %}
                                <li class="page-item">
                                    <a class="page-link" href="?page={{ page }}{% for key, value in filters %}{% if value %}&{{ key }}={{ value }}{% endif %}{% endfor %}">{{ page }}</a>
                                </li>
                            {% elseif page == pagination.current_page - 3 or page == pagination.current_page + 3 %}
                                <li class="page-item disabled">
                                    <span class="page-link">...</span>
                                </li>
                            {% endif %}
                        {% endfor %}
                        
                        {% if pagination.has_next %}
                            <li class="page-item">
                                <a class="page-link" href="?page={{ pagination.next_page }}{% for key, value in filters %}{% if value %}&{{ key }}={{ value }}{% endif %}{% endfor %}">
                                    <i class="bi bi-chevron-right"></i>
                                </a>
                            </li>
                        {% endif %}
                    </ul>
                </nav>
                
                <div class="text-center mt-2">
                    <small class="text-muted">
                        Showing {{ ((pagination.current_page - 1) * pagination.items_per_page) + 1 }} to 
                        {{ pagination.current_page * pagination.items_per_page > pagination.total_items ? pagination.total_items : pagination.current_page * pagination.items_per_page }} 
                        of {{ pagination.total_items }} tickets
                    </small>
                </div>
            </div>
            {% endif %}
        {% else %}
            <div class="text-center py-5">
                <i class="bi bi-inbox text-muted" style="font-size: 4rem;"></i>
                <h4 class="text-muted mt-3">No tickets found</h4>
                <p class="text-muted">Try adjusting your filters or create a new ticket.</p>
                <a href="/tickets/create" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-2"></i>Create New Ticket
                </a>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}

{% block scripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Auto-submit form when filters change
    const filterForm = document.getElementById('filterForm');
    const filterInputs = filterForm.querySelectorAll('select, input[type="text"]');
    
    filterInputs.forEach(input => {
        input.addEventListener('change', function() {
            // Add a small delay to prevent too many requests
            setTimeout(() => {
                filterForm.submit();
            }, 300);
        });
    });
    
    // Store current filters in localStorage
    const currentFilters = {
        status: '{{ filters.status|default("") }}',
        priority: '{{ filters.priority|default("") }}',
        category: '{{ filters.category|default("") }}',
        assigned_to: '{{ filters.assigned_to|default("") }}',
        search: '{{ filters.search|default("") }}',
        limit: '{{ pagination.items_per_page }}',
        lastUpdated: new Date().toISOString()
    };
    
    localStorage.setItem('ticketFilters', JSON.stringify(currentFilters));
});
</script>
{% endblock %}
