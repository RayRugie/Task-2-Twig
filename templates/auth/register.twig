{% extends "base.twig" %}

{% block title %}Sign Up - Ticketa{% endblock %}

{% block stylesheets %}
<link href="/css/auth.css" rel="stylesheet">
{% endblock %}

{% block content %}
<div class="auth-page">
    <header>      
        <a href="/" class="back-link">Back</a>
    </header>

    <div class="auth-container">
        <form class="auth-form" method="POST" action="/register">
            <input type="hidden" name="{{ csrf_token_name }}" value="{{ csrf_token }}">
            
            <h2>Create an Account</h2>

            <label>
                Email
                <input
                    type="email"
                    placeholder="you@example.com"
                    name="email"
                    required
                >
            </label>

            <label>
                Password
                <input
                    type="password"
                    placeholder="********"
                    name="password"
                    required
                >
            </label>

            <button type="submit">Sign Up</button>

            <p class="switch">
                Already have an account? <a href="/login">Login</a>
            </p>
        </form>
    </div>

    <footer class="footer">
        <p>© 2024 Ticketa — Built with ❤️ for HNG Internship</p>
    </footer>
</div>
{% endblock %}
